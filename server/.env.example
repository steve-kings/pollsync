# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS) - IMPORTANT FOR PRODUCTION
FRONTEND_URL=http://localhost:3000
# Additional allowed origins (comma-separated) - Optional
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://preview.yourdomain.com
ALLOWED_ORIGINS=

# Database Connection
# Replace with your MongoDB connection string
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/pollsync

# Security
# Replace with a long random string for JWT signing
JWT_SECRET=your_jwt_secret_key_here

# Cloudinary Configuration (For Image Uploads)
# Get these from your Cloudinary Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Kopokopo (M-PESA) Configuration
# Get these from your Kopokopo Dashboard (https://app.kopokopo.com/)
# Ensure you are using the correct credentials for Sandbox or Production
KOPOKOPO_BASE_URL=https://api.kopokopo.com
KOPOKOPO_CLIENT_ID=your_kopokopo_client_id_here
KOPOKOPO_CLIENT_SECRET=your_kopokopo_client_secret_here
KOPOKOPO_API_KEY=your_kopokopo_api_key_here
KOPOKOPO_TILL_NUMBER=your_till_number_here
# This URL must be publicly accessible (use ngrok for localhost testing)
KOPOKOPO_CALLBACK_URL=https://your-domain.com/api/payment/callback

